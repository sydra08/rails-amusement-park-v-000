<%= render partial:'attraction', locals: {attraction: @attraction} %>
<% if current_user.admin? %>
  <p><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></p>
<% else %>
  <%= form_tag ({controller: 'rides', action: 'new', method: 'post'}) do %>
    <%= hidden_field_tag 'attraction_id', @attraction.id %>
    <%= submit_tag "Go on this ride" %>
  <% end %>
<% end %>
