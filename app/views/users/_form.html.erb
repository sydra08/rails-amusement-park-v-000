<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br> </br>

  <%= f.label :password %> <br>
  <%= f.text_field :password %> <br> </br>

  <%= f.label "Height (in inches)" %> <br>
  <%= f.text_field :height %> <br> </br>

  <%= f.label "How happy are you? (1-5 scale)" %> <br>
  <%= f.text_field :happiness %> <br> </br>

  <%= f.label "How nauseous are you? (1-5 scale)" %> <br>
  <%= f.text_field :nausea %> <br> </br>

  <%= f.label "How many tickets do you want?" %> <br>
  <%= f.text_field :tickets %> <br> </br>

  <%= f.label "Check box if you are a theme park owner" %>
  <%= f.check_box :admin %> <br> </br>

  <%= f.submit %>
<% end %>
